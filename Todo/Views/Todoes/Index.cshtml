@model IEnumerable<Todo.Models.Todo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.todo_content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.todo_content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.todo_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.todo_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.todo_id })
        </td>
    </tr>
}

</table>
